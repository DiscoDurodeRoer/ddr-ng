{
  "name": "ddr-frontend-library",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-library": "ng test ddr-ng-lib --watch false",
    "build-library": "ng build ddr-ng-lib --watch",
    "test-build-library": "npm run test-library && ng build ddr-ng-lib",
    "start-library": "ng serve --watch --port 5200",
    "install-library-local": "npm run build-library && npm i dist/ddr-ng-lib",
    "publish": "npm run test-build-library && cd dist && npm publish ddr-ng",
    "build-documentation": "ng build --aot --configuration=production",
    "storybook": "ng run ddr-ng-lib:storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.6",
    "@angular/cdk": "^20.0.5",
    "@angular/common": "^20.0.6",
    "@angular/compiler": "^20.0.6",
    "@angular/core": "^20.0.6",
    "@angular/forms": "^20.0.6",
    "@angular/platform-browser": "^20.0.6",
    "@angular/platform-browser-dynamic": "^20.0.6",
    "@angular/router": "^20.0.6",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.2",
    "jquery": "^3.6.3",
    "ngx-markdown": "^19.1.1",
    "ngx-pagination": "^6.0.3",
    "rxjs": "~7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.5",
    "@angular/cli": "~20.0.5",
    "@angular/compiler-cli": "^20.0.6",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/angular": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/jasmine": "^5.1.4",
    "@types/prismjs": "^1.26.5",
    "jasmine-core": "^5.1.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-spec-reporter": "^0.0.36",
    "ng-packagr": "^20.0.1",
    "prettier": "^3.5.3",
    "prismjs": "^1.30.0",
    "storybook": "^8.6.14",
    "typescript": "~5.8.3"
  }
}