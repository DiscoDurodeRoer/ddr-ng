{
  "name": "ddr-frontend-library",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-library": "ng test ddr-ng-lib --watch false",
    "build-library": "npm run test-library && ng build ddr-ng-lib",
    "start-library": "npm link ./projects/ddr-ng-lib/ && ng serve --watch --port 5200",
    "install-library-local": "npm run build-library && npm i dist/ddr-ng-lib",
    "publish": "ng build ddr-ng-lib && npm publish dist/ddr-ng-lib/",
    "build-documentation": "ng build --aot --configuration=production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.7",
    "@angular/cdk": "^19.2.10",
    "@angular/common": "^19.2.7",
    "@angular/compiler": "^19.2.7",
    "@angular/core": "^19.2.7",
    "@angular/forms": "^19.2.7",
    "@angular/platform-browser": "^19.2.7",
    "@angular/platform-browser-dynamic": "^19.2.7",
    "@angular/router": "^19.2.7",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.2",
    "jquery": "^3.6.3",
    "lodash-es": "^4.17.21",
    "ngx-markdown": "^19.1.1",
    "ngx-pagination": "^6.0.3",
    "rxjs": "~7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.8",
    "@angular/cli": "~19.2.8",
    "@angular/compiler-cli": "^19.2.7",
    "@types/jasmine": "^5.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/prismjs": "^1.26.5",
    "jasmine-core": "^5.1.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-spec-reporter": "^0.0.36",
    "ng-packagr": "^19.2.2",
    "prettier": "^3.5.3",
    "prismjs": "^1.30.0",
    "typescript": "~5.8.3"
  }
}
